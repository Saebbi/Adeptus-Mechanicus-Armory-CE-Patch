<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoOGEEBrightlance</defName>
      <label>Brightlance charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGEEBrightlance</defName>
    <label>Brightlance charge</label>
    <ammoTypes>
      <Ammo_OGEEBrightlance>Bullet_OGEEBrightlance</Ammo_OGEEBrightlance>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="OGEEBrightlanceBase" ParentName="AmmoBase" Abstract="True">
    <description>Brightlance ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGEEBrightlance</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="OGEEBrightlanceBase">
    <defName>Ammo_OGEEBrightlance</defName>
    <label>Brightlance cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseOGEEBrightlance" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/LasCShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>OGILas</damageDef>
      <speed>135</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseOGEEBrightlance">
    <defName>Bullet_OGEEBrightlance</defName>
    <label>Brightlance shot</label>
    <projectile>
      <damageAmountBase>75</damageAmountBase>
      <armorPenetration>3.0</armorPenetration>
    </projectile>
		<thingClass>AdeptusMechanicus.Projectile_Laser</thingClass>
			<createsExplosion>true</createsExplosion>
			<preFiringInitialIntensity>0</preFiringInitialIntensity>
			<preFiringFinalIntensity>2</preFiringFinalIntensity>
			<postFiringInitialIntensity>2</postFiringInitialIntensity>
			<postFiringFinalIntensity>0</postFiringFinalIntensity>
			<preFiringDuration>60</preFiringDuration>
			<postFiringDuration>60</postFiringDuration>
			<StartFireChance>1</StartFireChance>
  </ThingDef>

</Defs>