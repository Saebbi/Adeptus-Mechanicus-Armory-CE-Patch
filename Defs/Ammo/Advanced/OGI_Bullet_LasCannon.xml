<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoOGILasCannon</defName>
      <label>Las charge</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGILasCannon</defName>
    <label>Las charge</label>
    <ammoTypes>
      <Ammo_OGILasCannon>Bullet_OGILasCannon</Ammo_OGILasCannon>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="OGILasCannonBase" ParentName="AmmoBase" Abstract="True">
    <description>Las ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGILasCannon</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="OGILasCannonBase">
    <defName>Ammo_OGILasCannon</defName>
    <label>Las cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Charged/Regular</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>Charged</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseOGILasCannon" ParentName="BaseBullet" Abstract="true">
 	<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/LasCShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>OGILas</damageDef>
      <speed>105</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseOGILasCannon">
    <defName>Bullet_OGILasCannon</defName>
    <label>Las shot</label>
    <projectile>
      <damageAmountBase>75</damageAmountBase>
	  <explosionRadius>0.55</explosionRadius>
      <armorPenetration>3.0</armorPenetration>
    </projectile>
		<thingClass>AdeptusMechanicus.Projectile_Laser</thingClass>
			<createsExplosion>true</createsExplosion>
			<preFiringInitialIntensity>0</preFiringInitialIntensity>
			<preFiringFinalIntensity>2</preFiringFinalIntensity>
			<postFiringInitialIntensity>2</postFiringInitialIntensity>
			<postFiringFinalIntensity>0</postFiringFinalIntensity>
			<preFiringDuration>2</preFiringDuration>
			<postFiringDuration>50</postFiringDuration>
			<StartFireChance>0.1</StartFireChance>
			<CanStartFire>true</CanStartFire>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_OGILasCannon</defName>
    <label>make Las cartridge x180</label>
    <description>Craft 180 Las cartridges.</description>
    <jobString>Making Las cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_OGILasCannon>180</Ammo_OGILasCannon>
    </products>
	<researchPrerequisite>WRLasCannon</researchPrerequisite>
  </RecipeDef>
	
</Defs>