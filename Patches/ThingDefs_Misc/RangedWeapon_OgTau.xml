      <ammoSet>AmmoSet_OGTTPulseCarbine</ammoSet>
    </AmmoUser>
    <FireModes>
    	<aiAimMode>AimedShot</aiAimMode>
		<aiUseBurstMode>TRUE</aiUseBurstMode>		
    </FireModes>
    <weaponTags>
		<li>TPulseCarbine</li>
    </weaponTags>
  </Operation>
  
	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="OGT_Gun_TPulseCarbine"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>9</power>
					<cooldownTime>1.8</cooldownTime>
					<armorPenetration>0.12</armorPenetration>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
						<li>Poke</li>
					</capacities>
					<power>10</power>
					<cooldownTime>1.9</cooldownTime>
					<armorPenetration>0.15</armorPenetration>
				</li>
			</tools>
		</value>
	</Operation>
 
