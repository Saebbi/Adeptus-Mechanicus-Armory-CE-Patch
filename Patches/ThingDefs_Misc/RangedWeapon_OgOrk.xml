<Patch>

  <Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
    <defName>OGO_Gun_OSlugga</defName>
    <statBases>
      <Mass>4.8</Mass>
      <RangedWeapon_Cooldown>0.85</RangedWeapon_Cooldown>
      <SightsEfficiency>0.8</SightsEfficiency>
      <ShotSpread>0.15</ShotSpread>
      <SwayFactor>1.5</SwayFactor>
      <Bulk>4.50</Bulk>
    </statBases>
    <Properties>
		<recoilAmount>0.45</recoilAmount>
      <verbClass>CombatExtended.Verb_ShootCE</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>Bullet_OGOOSlugga</defaultProjectile>
      <warmupTime>0.3</warmupTime>
      <range>12</range>
      <soundCast>ShotRevolver</soundCast>
      <soundCastTail>GunTail_Light</soundCastTail>
      <muzzleFlashScale>8</muzzleFlashScale>
	  <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>8</burstShotCount>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
    </Properties>
    <AmmoUser>
      <magazineSize>24</magazineSize>
      <reloadTime>3.5</reloadTime>
      <ammoSet>AmmoSet_OGOOSlugga</ammoSet>
    </AmmoUser>
    <FireModes>
    	<aiAimMode>AimedShot</aiAimMode>
		<aiUseBurstMode>TRUE</aiUseBurstMode>	
    </FireModes>
    <weaponTags>
		<li>Gun</li>
		<li>OSlugga</li>
    </weaponTags>
  </Operation>
  
	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="OGO_Gun_OSlugga"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>grip</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>12</power>
					<cooldownTime>1.6</cooldownTime>
					<armorPenetration>0.12</armorPenetration>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
						<li>Poke</li>
					</capacities>
					<power>12</power>
					<cooldownTime>1.6</cooldownTime>
					<armorPenetration>0.15</armorPenetration>
				</li>
			</tools>
		</value>
	</Operation>

