<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
    <defName>OGN_Gun_NGaussFlayer</defName>
    <statBases>
      <Mass>3.8</Mass>
      <RangedWeapon_Cooldown>0.85</RangedWeapon_Cooldown>
      <SightsEfficiency>1.0</SightsEfficiency>
      <ShotSpread>0.15</ShotSpread>
      <SwayFactor>1.5</SwayFactor>
      <Bulk>3.50</Bulk>
    </statBases>
    <Properties>
		<recoilAmount>0.15</recoilAmount>
      <verbClass>CombatExtended.Verb_ShootCE</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>Bullet_OGNNGaussFlayer</defaultProjectile>
      <warmupTime>0.3</warmupTime>
      <range>24</range>
      <soundCast>ShotRevolver</soundCast>
      <soundCastTail>GunTail_Light</soundCastTail>
      <muzzleFlashScale>8</muzzleFlashScale>
	  <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>8</burstShotCount>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
    </Properties>
    <AmmoUser>
      <magazineSize>32</magazineSize>
      <reloadTime>4</reloadTime>
      <ammoSet>AmmoSet_OGNNGaussFlayer</ammoSet>
    </AmmoUser>
    <FireModes>
    	<aiAimMode>AimedShot</aiAimMode>
		<aiUseBurstMode>TRUE</aiUseBurstMode>		
    </FireModes>
    <weaponTags>
		<li>Gun</li>
		<li>NGaussFlayer</li>
    </weaponTags>
  </Operation>
  
	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName="OGN_Gun_NGaussFlayer"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>grip</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>10</power>
					<cooldownTime>1.6</cooldownTime>
					<armorPenetration>0.12</armorPenetration>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>barrel blade</label>
					<capacities>
						<li>Cut</li>
						<li>Poke</li>
					</capacities>
					<power>12</power>
					<cooldownTime>1.6</cooldownTime>
					<armorPenetration>0.35</armorPenetration>
				</li>
			</tools>
		</value>
	</Operation>

